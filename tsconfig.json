{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/core/*": ["core/*"],
      "@/pages/*": ["pages/*"],
      "@/util/*": ["util/*"],
      "@/interface/*": ["interface/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/Login.tsx",
    "core/api/login/naverOauth.js",
    "pages/_app.js",
    "pages/_document.js",
    "scripts/sitemap-common.js"
  ],
  "exclude": ["node_modules"]
}
